<!DOCTYPE html>
<html lang="en">
<head>
    <title> Comments by <%= email %>, (Total: <%= count %>) </title>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
<!--===============================================================================================-->
	<link rel="icon" type="image/png" href="/images/icons/favicon.ico"/>
<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="/vendor/bootstrap/css/bootstrap.min.css">
<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="/vendor/animate/animate.css">
<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="/vendor/css-hamburgers/hamburgers.min.css">
<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="/vendor/select2/select2.min.css">
<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="/css/util.css">
	<link rel="stylesheet" type="text/css" href="/css/main.css">
<!--===============================================================================================-->
</head>
<body>

	<div class="bg-contact2" style="background-image: url('/images/bg-01.jpg');">
		<div class="container-contact2">
			<div class="wrap-contact2" style="width: 76%;">
				<form class="contact2-form validate-form" method="POST" action="">
					<span class="contact2-form-title">
						Comments by <%= email %>, (Total: <%= count %>)
					</span>
					
    <table class="table table-striped table-bordered">
        <tr>
            <td>

                <div>
                    <label> Course Code </label>
                </div>

            </td>
            <td>

                <div>
                    <label> Course Name </label>

                </div>

            </td>
            <td>
                <div>
                    <label> Comment </label>
                </div>
            </td>
          
        </tr>

        <% comments.forEach(function(comment){ %>

        <tr>
            <td>
                <div>

                    <input type="text" name="firstname" value="<%= comment.courseCode %>" />
                </div>

            </td>
            <td>
                <div>
                    <input type="text" name="lastname" value="<%= comment.courseName %>" />
                </div>

            </td>
            <td>
                <div>
                    <input type="text" name="email" value="<%= comment.comment %>" />
                </div>
            </td>
        </tr>

        <% })%>

    </table>

 

					<div class="container-contact2-form-btn">
						<div class="wrap-contact2-form-btn">
							<div class="contact2-form-bgbtn"></div>
						
                            <a href="http://localhost:3000" class="contact2-form-btn"> Main Page</a>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>

<!--===============================================================================================-->
	<script src="/vendor/jquery/jquery-3.2.1.min.js"></script>
<!--===============================================================================================-->
	<script src="/vendor/bootstrap/js/popper.js"></script>
	<script src="/vendor/bootstrap/js/bootstrap.min.js"></script>
<!--===============================================================================================-->
	<script src="/vendor/select2/select2.min.js"></script>
<!--===============================================================================================-->

</body>
</html>
